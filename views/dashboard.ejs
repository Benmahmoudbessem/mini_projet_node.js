<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      animation: fadeIn 1s ease-in-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .card {
      border-radius: 1rem;
      box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
    }
    .form-select {
      min-width: 120px;
    }
    .task-title {
      font-weight: 500;
      font-size: 1.1rem;
    }
  </style>
</head>
<body class="container py-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>ğŸ‘‹ Bienvenue Monsieux, <%= user.username %></h2>
    <a href="/logout" class="btn btn-outline-danger">DÃ©connexion</a>
  </div>

  <div class="row g-4">
    <!-- Statistiques avec graphique -->
    <div class="col-lg-4">
      <div class="card p-3">
        <h4 class="mb-3">ğŸ“Š Statistiques</h4>
        <canvas id="statsChart" width="400" height="400"></canvas>
      </div>
    </div>

    <!-- Formulaire d'ajout -->
    <div class="col-lg-8">
      <div class="card p-4">
        <h4 class="mb-3">ğŸ“ Ajouter une tÃ¢che</h4>
        <form method="POST" action="/task">
          <div class="mb-3">
            <input type="text" name="title" placeholder="Titre" required class="form-control">
          </div>
          <div class="mb-3">
            <textarea name="description" placeholder="Description" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Liste des tÃ¢ches -->
  <div class="mt-5">
    <h4 class="mb-3">ğŸ“‹ Liste des tÃ¢ches</h4>
    <ul class="list-group">
      <% tasks.forEach(task => { %>
        <li class="list-group-item d-flex flex-wrap justify-content-between align-items-center">
          <div class="task-title mb-2 mb-md-0">
            <%= task.title %> - <span class="badge bg-secondary"><%= task.status %></span>
          </div>
          <div class="d-flex gap-2">
            <form method="POST" action="/task/status/<%= task._id %>">
              <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                <option value="en cours" <%= task.status === 'en cours' ? 'selected' : '' %>>En cours</option>
                <option value="terminÃ©" <%= task.status === 'terminÃ©' ? 'selected' : '' %>>TerminÃ©</option>
                <option value="annulÃ©" <%= task.status === 'annulÃ©' ? 'selected' : '' %>>AnnulÃ©</option>
              </select>
            </form>
            <form method="POST" action="/task/delete/<%= task._id %>">
              <button type="submit" class="btn btn-sm btn-outline-danger">ğŸ—‘ï¸</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

  <!-- SCRIPTS -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const ctx = document.getElementById('statsChart').getContext('2d');
    const statsChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['En cours', 'TerminÃ©', 'AnnulÃ©'],
        datasets: [{
          label: 'TÃ¢ches',
          data: [
            <%= Number(stats.enCours || 0) %>,
            <%= Number(stats.termine || 0) %>,
            <%= Number(stats.annule || 0) %>
          ],
          backgroundColor: ['#ffc107', '#28a745', '#dc3545'],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'bottom'
          }
        }
      }
    });
  </script>
  

  <script src="/socket.io/socket.io.js"></script>
  <script src="/socket.js"></script>
</body>
</html>
